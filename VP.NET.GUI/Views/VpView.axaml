<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:VP.NET.GUI.ViewModels;assembly=VP.NET.GUI"
             x:Class="VP.NET.GUI.Views.VpView">
	<Design.DataContext>
		<vm:VpViewModel/>
	</Design.DataContext>
	
	<Grid>

		<StackPanel Margin="10,0,0,0">
			
			<TextBlock Height="20" FontSize="14" Margin="5,0,0,0" TextWrapping="Wrap" Text="{Binding Name}"/>
			<TreeView Name="VPTree" ItemsSource="{Binding Files}" >
				<TreeView.Styles>
					<Style Selector="TreeViewItem">
						<Setter Property="IsExpanded" Value="False" />
					</Style>
				</TreeView.Styles>
				<TreeView.DataTemplates >
					<TreeDataTemplate DataType="vm:VpViewModel" ItemsSource="{Binding Files}">
						<Grid RowDefinitions="Auto" ColumnDefinitions="Auto,*">
							<Image Grid.Row="0" Grid.Column="0" Source="avares://VP.NET.GUI/Assets/icons/folder.png" MaxWidth="25" />
							<Label Grid.Row="0" Grid.Column="1" Content="{Binding Name}"/>
						</Grid>
					</TreeDataTemplate>
				</TreeView.DataTemplates>
			</TreeView>
			
		</StackPanel>
		
	</Grid>
</UserControl>
